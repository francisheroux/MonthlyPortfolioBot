# Robinhood Credentials
ROBINHOOD_USERNAME=your_email@example.com
ROBINHOOD_PASSWORD=your_password

# TOTP Secret (required for automated Lambda, optional for local testing)
# Get this from Robinhood when setting up authenticator app 2FA
# Look for "Can't scan?" or "Setup key" to see the secret
# ROBINHOOD_TOTP_SECRET=YOUR_BASE32_TOTP_SECRET

# Email Configuration
SENDER_EMAIL=portfolio@yourdomain.com
RECIPIENT_EMAIL=you@example.com

# Gmail SMTP (use this instead of SES if sending from Gmail)
# Create an App Password at: https://myaccount.google.com/apppasswords
# If set, emails will be sent via Gmail SMTP instead of AWS SES
# GMAIL_APP_PASSWORD=your_16_character_app_password

# AWS Configuration
AWS_REGION=us-east-1

# Retirement Configuration
RETIREMENT_TARGET=2000000
RETIREMENT_AGE=65
CURRENT_AGE=30
MONTHLY_CONTRIBUTION=500
